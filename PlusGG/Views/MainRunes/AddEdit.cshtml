@model MainRunesViewModel
<h1>Add/Edit</h1>

<h4>Main Runes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddEdit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RuneCategoryId" class="control-label"></label>
                <select asp-for="RuneCategoryId" class="form-control" asp-items="Model.AllRuneCategories">
                    <option></option>
                </select>
                <span asp-validation-for="RuneCategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Sort" class="control-label"></label>
                <input asp-for="Sort" class="form-control" />
                <span asp-validation-for="Sort" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                @if (!string.IsNullOrWhiteSpace(Model.ImageSrc))
                {
                    <img src="@Model.ImageSrc" />
                }
                <input asp-for="Image" class="form-control" type="file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}